#ex_10_03
fname = input ("enter file name ")
fhand = open (fname)
counts= dict()
tot=0
#From stephen.marquard@uct.ac.za Sat Jan  5 09:14:16 2008
for lx in fhand:

    lx = lx.lower()
    lx = lx.rstrip()
    lx = lx. split ()
    #print (lx)


    for wd in lx:
        #print (wd)
        for lett in wd:
            tot = tot +1
            counts [lett]= counts.get (lett,0)+1
           
 #at this point, creat a dictionaries which consists all the letters with counting
            
tup= list()

for key,value in counts.items():# counts.items() made a list of tuples extracted from the dictionary"counts"
    tup.append ((key,value))

tup = sorted (tup)

for  letter, num in tup:
    print (letter, num, float(num)/tot*100, "%")
